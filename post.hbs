{{!< default}}

{{#post}}

<article class="{{post_class}}">
    <header>
        <h1>{{title}}</h1>
        <div class="post-tag">
            <span>{{tags prefix="on "}}</span>
        </div>
        <h2 class="headline">{{date format="MMMM DD YYYY"}}</h2>
    </header>
    <section id="post-body">
        {{content}}
    </section>
</article>
{{!-- Email subscribe form at the bottom of the page --}}
{{!--
{{#if @labs.subscribers}}
<section class="subscribe-form">
    <h3 class="subscribe-form-title">Subscribe to {{@blog.title}}</h3>
    <p>Get the latest posts delivered right to your inbox</p>
    {{subscribe_form placeholder="youremail@example.com"}}
</section>
{{/if}}
--}}
<footer id="post-meta" class="clearfix">
    {{#author}}
        <section class="author-card">
            <div class="light">Crafted by</div>
            <a href="{{url}}">
                {{#if profile_image}}
                    <img class="avatar" src="{{profile_image}}" alt="{{name}}">
                {{/if}}
                <div>
                    <span class="dark">{{ name }}</span>
                    <span>{{ bio }}</span>
                </div>
            </a>
        </section>
    {{/author}}

    <section id="sharing">
        {{> "share"}}
    </section>
</footer>
<div class="archive readmore">
    <h3>Comments</h3>
    {{> "disqus"}}
</div>
{{/post}}
